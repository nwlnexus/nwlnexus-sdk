{
  "extends": "@olympus/typescript-config/remix.json",
  "include": ["remix.env.d.ts", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "./node_modules", "./node_modules/*", "scripts/*"],
  "compilerOptions": {
    "paths": {
      "@css/*": ["./app/css/*"],
      "@schema/*": ["./app/db/schema/*"],
      "@config/*": ["./app/lib/config/*"],
      "@context/*": ["./app/lib/context/*"],
      "@components/*": ["./app/lib/components/*"],
      "@hooks/*": ["./app/lib/hooks/*"],
      "@services/*": ["./app/lib/services/*"],
      "@assets/*": ["./app/lib/assets/*"],
      "@app/*": ["./app/*"]
    }
  }
}
