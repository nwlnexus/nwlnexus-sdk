    "cypress": "^10.7.0",
    "esbuild": "^0.15.7",
    "esbuild-jest": "^0.5.0",
    "eslint": "8.22.0",
    "eslint-config-custom": "workspace:*",
    "eslint-config-prettier": "^8.5.0",
