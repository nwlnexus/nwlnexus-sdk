{
  "private": true,
  "name": "@nwlnexus/helios-remix-app",
  "main": "./build/index.js",
  "types": "./build.d.ts",
  "scripts": {
    "prebuild": "pnpm run clean && echo All clean âœ¨",
    "build": "run-s \"build:*\"",
    "build:css": "postcss styles/**/*.css --base ./styles --dir ./app/styles --env production",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "clean": "rimraf ./cache ./build ./public/build \"./app/styles/**/*.css\" \"./functions/**\"",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "dev": "pm2-dev ./pm2.config.js",
    "format": "prettier --write \"./app/**/*.{ts,tsx}\"",
    "prepare": "cd ../.. && husky install apps/remix-app/.husky",
    "postinstall": "patch-package && remix-esbuild-override",
    "lint": "eslint ./app",
    "lint:fix": "pnpm run lint -- --fix",
    "test": "jest --passWithNoTests",
    "test:e2e:dev": "cross-env RUNNING_E2E=true ENABLE_TEST_ROUTES=true start-server-and-test dev http-get://localhost:3000/build/info.json cy:open",
    "test:e2e:run": "cross-env RUNNING_E2E=true PORT=8811 start-server-and-test start:mocks http-get://localhost:8811/build/info.json cy:run",
    "typecheck": "tsc -b"
  },
  "sideEffects": false,
  "dependencies": {
    "@cfworker/base64url": "^1.12.4",
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@n8tb1t/use-scroll-position": "^2.0.3",
    "@remix-run/cloudflare": "^1.7.0",
    "@remix-run/cloudflare-workers": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/server-runtime": "^1.7.0",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@xstate/react": "^3.0.1",
    "chalk": "^5.0.1",
    "clsx": "^1.2.1",
    "daisyui": "^2.24.2",
    "date-fns": "^2.29.2",
    "error-stack-parser": "^2.1.4",
    "framer-motion": "^7.3.2",
    "react": "^18.2.0",
    "react-daisyui": "^2.3.2",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.2",
    "remix-auth": "^3.2.2",
    "remix-auth-auth0": "^1.3.8",
    "remix-typedjson": "^0.1.1",
    "remix-validated-form": "^4.5.5",
    "theme-change": "^2.2.0",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.19.1",
    "zod-form-data": "^1.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@iconify/icons-heroicons": "^1.2.3",
    "@iconify/react": "^3.2.2",
    "@remix-run/dev": "^1.7.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.15",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "cloudflare-env": "workspace:*",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
