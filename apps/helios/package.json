{
  "name": "helios-remix",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual -c \"npm run start\"",
    "app:prepare": "cf-setup prepare --schema-dir=\"./app/db/schema\" --migrations-dir=\"./migrations\" --persist-to=\"../../.wrangler\"",
    "app:prepare:reset": "cf-setup prepare --reset --schema-dir=\"./app/db/schema\" --migrations-dir=\"./migrations\" --persist-to=\"../../.wrangler\"",
    "pages:deploy": "npm run build && wrangler pages deploy ./public --commit-dirty=true",
    "start": "npm run app:prepare && wrangler pages dev --compatibility-date=${COMPAT_DATE} --compatibility-flag=nodejs_compat --persist-to=\"../../.wrangler\" ./public",
    "typecheck": "tsc",
    "test": "vitest related --no-tests --run",
    "test:watch": "vitest --no-tests watch"
  },
  "dependencies": {
    "@preact/signals-react": "^1.3.6",
    "@remix-run/cloudflare": "^2.3.0",
    "@remix-run/cloudflare-pages": "^2.3.0",
    "@remix-run/css-bundle": "^2.3.0",
    "@remix-run/react": "^2.3.0",
    "@remix-run/server-runtime": "^2.3.0",
    "cf-setup": "github:nwlnexus/cfsetup",
    "clsx": "^2.0.0",
    "daisyui": "^4.4.0",
    "drizzle-orm": "^0.29.0",
    "drizzle-zod": "^0.5.1",
    "is-ip": "^5.0.1",
    "isbot": "^3.7.1",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-daisyui": "^4.1.2",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "remix-auth": "^3.6.0",
    "remix-auth-auth0": "^1.9.0",
    "remix-utils": "^7.1.0",
    "tailwind-merge": "^2.0.0",
    "ulid-workers": "^2.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "@remix-run/dev": "^2.3.0",
    "@remix-run/eslint-config": "^2.3.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/scope-manager": "^6.12.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "tailwindcss-3d": "^1.0.2",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "wrangler": "^3.16.0"
  },
  "overrides": {
    "remix-auth": {
      "@remix-run/react": "^2.0.1"
    },
    "remix-utils": {
      "@remix-run/react": "^2.0.1"
    },
    "react-daisyui": {
      "daisyui": "^4"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
