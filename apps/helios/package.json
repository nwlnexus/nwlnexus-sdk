{
  "name": "helios",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "next:lint": "next lint",
    "build": "next-on-pages",
    "deploy": "yarn build && wrangler pages deploy .vercel/output/static",
    "watch": "next-on-pages --watch",
    "app:prepare": "cf-setup prepare --schemaDir=./src/db --migrationsDir=./migrations --persistTo=\"../../.wrangler\"",
    "dev": "yarn app:prepare && wrangler pages dev .vercel/output/static --compatibility-date=${COMPAT_DATE} --compatibility-flag=nodejs_compat --persist-to=\"../../.wrangler\""
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "1",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/eslint": "^8",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "autoprefixer": "^10.4.16",
    "cf-setup": "*",
    "cssnano": "^6.0.1",
    "daisyui": "^3.9.4",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-next-on-pages": "^1.7.2",
    "husky": "^8.0.3",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "react-daisyui": "^4.1.2",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vercel": "^32.5.0",
    "wrangler": "^3.15.0"
  },
  "dependencies": {
    "@auth/core": "^0.18.1",
    "@auth/d1-adapter": "^0.2.4",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.29.0",
    "next": "^14.0.1",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.3.0",
    "yarn": ">=1"
  },
  "browserslist": [
    "> 2%"
  ]
}
