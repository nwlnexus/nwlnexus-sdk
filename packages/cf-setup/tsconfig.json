{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "module": "nodenext",
    "moduleDetection": "auto",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
