{
  "private": true,
  "name": "olympus-remix-app",
  "main": "./build/index.js",
  "types": "./build.d.ts",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "run-s \"build:*\"",
    "build:css": "postcss styles --base ./styles --dir ./app/styles --env production",
    "build:remix": "remix build",
    "clean": "rimraf ./public/build \"./app/styles/**/*.css\" \"./functions/**\"",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:css": "postcss styles --base ./styles --dir ./app/styles -w",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler dev --local --experimental-enable-local-persistence --node-compat",
    "format": "prettier --write \"./app/**/*.{ts,tsx}\"",
    "postinstall": "remix-esbuild-override && rmx gen-remix --config ./gen-remix.config.json",
    "lint": "eslint --ext .tsx,.ts --ignore-path node_modules app",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc -b"
  },
  "sideEffects": false,
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@remix-run/cloudflare": "^1.7.0",
    "@remix-run/cloudflare-workers": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "clsx": "^1.2.1",
    "daisyui": "^2.24.2",
    "react": "^18.2.0",
    "react-daisyui": "^2.3.2",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.2",
    "remix-auth": "^3.2.2",
    "remix-auth-auth0": "^1.3.8",
    "remix-typedjson": "^0.1.1",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@iconify/icons-heroicons": "^1.2.3",
    "@iconify/react": "^3.2.2",
    "@remix-run/dev": "^1.7.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.15",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "cloudflare-env": "*",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.13",
    "esbuild-jest": "^0.5.0",
    "eslint": "8.22.0",
    "eslint-config-custom": "*",
    "jest": "^29.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "remix-esbuild-override": "^3.0.4",
    "rimraf": "^3.0.2",
    "rmx-cli": "^0.3.1",
    "tailwindcss": "^3.1.8",
    "tsconfig": "*",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.29"
  },
  "engines": {
    "node": ">=16.13"
  }
}
