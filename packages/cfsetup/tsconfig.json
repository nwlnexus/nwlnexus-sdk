{
  "extends": "@nwlnexus/typescript-config/base.json",
  "compilerOptions": {
    "jsx": "react",
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleDetection": "auto",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.mjs", "**/*.mts"],
  "exclude": ["node_modules", "**/node_modules", "dist", "**/*.test.ts", "**/__tests__"]
}
