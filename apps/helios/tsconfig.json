{
  "extends": "@nwlnexus/typescript-config/remix.json",
  "include": ["remix.env.d.ts", "**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "./node_modules", "./node_modules/*", "scripts/*"],
  "compilerOptions": {
    "paths": {
      "@css/*": ["./app/styles/*"],
      "@config/*": ["./app/config/*"],
      "@context/*": ["./app/context/*"],
      "@components/*": ["./app/components/*"],
      "@db/*": ["./app/db/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@providers/*": ["./app/providers/*"],
      "@services/*": ["./app/services/*"],
      "@assets/*": ["./app/assets/*"],
      "@utils/*": ["./app/utils/*"],
      "@app/*": ["./app/*"]
    }
  }
}
