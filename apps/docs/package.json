{
  "private": true,
  "name": "@nwlnexus/docs",
  "description": "NWL Nexus documentation site",
  "version": "0.0.1",
  "engines": {
    "node": ">=16.16.0"
  },
  "browserslist": [
    "defaults"
  ],
  "repository": "https://github.com/nwlnexus/olympus-v3",
  "license": "MIT",
  "scripts": {
    "create": "exec-bin node_modules/.bin/hugo/hugo new",
    "prestart": "pnpm run clean",
    "dev": "exec-bin node_modules/.bin/hugo/hugo server  --bind=0.0.0.0 --disableFastRender --baseURL=http://localhost",
    "prebuild": "pnpm run clean",
    "build": "exec-bin node_modules/.bin/hugo/hugo --gc --minify",
    "build:preview": "pnpm run build -D -F",
    "clean": "shx rm -rf public resources",
    "clean:install": "shx rm -rf package-lock.json node_modules ",
    "lint": "pnpm run -s lint:scripts && pnpm run -s lint:styles && pnpm run -s lint:markdown",
    "lint:scripts": "eslint assets/js config functions",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \"content/**/*.md\"",
    "lint:markdown-fix": "markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "server": "exec-bin node_modules/.bin/hugo/hugo server",
    "test": "pnpm run -s lint",
    "env": "env",
    "precheck": "pnpm version",
    "check": "exec-bin node_modules/.bin/hugo/hugo version",
    "latest:hugo": "gh release view --repo gohugoio/hugo",
    "postinstall": "hugo-installer --version otherDependencies.hugo --os \"darwin\" --extended --destination node_modules/.bin/hugo",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@popperjs/core": "^2.11.6",
    "auto-changelog": "^2.4.0",
    "autoprefixer": "^10.4.11",
    "eslint": "8.22.0",
    "exec-bin": "^1.0.0",
    "hugo-installer": "^4.0.0",
    "lazysizes": "^5.3",
    "markdownlint-cli2": "^0.4.0",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "purgecss-whitelister": "^2.4.0",
    "quicklink": "^2.3.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "shx": "^0.3.4",
    "stylelint": "^14.11.0",
    "stylelint-config-standard-scss": "^5.0.0"
  },
  "packageManager": "pnpm@7.9.5",
  "otherDependencies": {
    "hugo": "0.102.3"
  }
}
